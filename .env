# Database
MYSQL_ROOT_PASSWORD=SuperSecretRoot123
MYSQL_DATABASE=graphql_db
MYSQL_USER=graphql_user
MYSQL_PASSWORD=SecurePass123!
MYSQL_PORT=3306

# App
APP_NAME="GraphQL API Best Practice"
DEBUG=true
ENVIRONMENT=development
APP_PORT=8000
HOST=0.0.0.0

# Security
SECRET_KEY=your-super-secret-jwt-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Redis (Rate Limiting Cache)
REDIS_URL=redis://localhost:6379/0

# Database Config
DATABASE_URL=mysql+aiomysql://graphql_user:SecurePass123!@db:3306/graphql_db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
